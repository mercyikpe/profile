---
import events from "../collections/events.json";
import PageHeading from "../components/page-heading.astro";
import Event from "../components/event.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="My talks">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="My Talks"
      description="Here are some events where Iâ€™ve had the opportunity to share my knowledge."
    />

    <div
      class="z-50 grid items-stretch w-full grid-cols-1 my-8 gap-7 sm:gap-5 sm:grid-cols-2"
    >
      {
        events.map((project) => {
          return (
            <Event
              name={project.name}
              description={project.description}
              image={project.image}
              url={project.url}
            />
          );
        })
      }
    </div>
  </section>
</Layout>
