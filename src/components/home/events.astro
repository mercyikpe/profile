---
import events from "../../collections/events.json";
import Button from "../button.astro";
import Event from "../event.astro";
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2
    class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100"
  >
    My Talks
  </h2>
  <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
    Here are recent events I shared knowledge.
  </p>
  <div
    class="grid items-stretch w-full grid-cols-1 sm:grid-cols-2 gap-7 mt-7"
  >
    {
      events.slice(0, 2).map((project) => {
        return (
          <Event
            name={project.name}
            description={project.description}
            image={project.image}
            url={project.url}
            alt={project.name}
          />
        )
      })
    }
  </div>

  <div class="flex items-center justify-center w-full py-5">
    <Button text="View All Talks" link="/events" />
  </div>
</section>
